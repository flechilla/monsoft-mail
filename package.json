{
  "name": "monsoft-mail",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,md,mdx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,md,mdx,css,json}\"",
    "typecheck": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "tsx src/lib/db/migrate.ts",
    "db:generate": "drizzle-kit generate",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "^15.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "better-auth": "^1.2.8",
    "drizzle-orm": "^0.44.2",
    "postgres": "^3.4.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.0",
    "lucide-react": "^0.511.0",
    "zod": "^3.25.36",
    "resend": "^4.0.0",
    "ai": "^4.0.0",
    "@ai-sdk/openai": "^1.0.0",
    "react-hook-form": "^7.56.4",
    "@hookform/resolvers": "^5.0.1"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@tailwindcss/postcss": "^4.1.8",
    "tailwindcss": "^4.1.8",
    "postcss": "^8.5.4",
    "drizzle-kit": "^0.31.1",
    "tsx": "^4.19.4",
    "eslint": "^9.28.0",
    "@eslint/js": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "typescript-eslint": "^8.34.0",
    "eslint-plugin-import-x": "^4.15.2",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css}": [
      "prettier --write"
    ]
  }
}
